@model IEnumerable<TaskItem>

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>
            <i class="fas fa-tasks me-2"></i>
            Tasks in: <span class="text-primary">@ViewBag.ListTitle</span>
        </h2>
        <a asp-action="Create" asp-route-listId="@ViewBag.ListId" class="btn btn-primary">
            <i class="fas fa-plus me-1"></i> Add Task
        </a>
    </div>

    <div class="card shadow">
        <div class="card-body">
            @if (!Model.Any())
            {
                <div class="alert alert-info">
                    <i class="fas fa-info-circle me-2"></i>No tasks found in this list.
                </div>
            }
            else
            {
                <div class="list-group list-group-flush">
                    @foreach (var task in Model)
                    {
                        <div class="list-group-item list-group-item-action">
                            <div class="d-flex w-100 justify-content-between align-items-center">
                                <div>
                                    <h5 class="mb-1">
                                        @if (task.IsComplete)
                                        {
                                            <span class="text-success"><i class="fas fa-check-circle me-2"></i></span>
                                        }
                                        @task.Title
                                    </h5>
                                    <p class="mb-1 text-muted">@task.Description</p>
                                </div>
                                <div class="btn-group">
                                    <form asp-action="ToggleComplete" asp-route-id="@task.Id" method="post" class="me-2">
                                        <button type="submit" class="btn btn-sm @(task.IsComplete ? "btn-success" : "btn-outline-secondary")">
                                            <i class="fas @(task.IsComplete ? "fa-check" : "fa-circle")"></i>
                                        </button>
                                    </form>
                                    <a asp-action="Edit" asp-route-id="@task.Id" class="btn btn-sm btn-outline-primary me-1">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@task.Id" class="btn btn-sm btn-outline-danger">
                                        <i class="fas fa-trash"></i>
                                    </a>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
        </div>
    </div>
</div>