<!DOCTYPE html>
<html lang="en" data-bs-theme="light">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ToDo App</title>
    <!-- Bootstrap 5 + Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary shadow">
            <div class="container">
                <a class="navbar-brand" asp-controller="Login" asp-action="Index">
                    <i class="fas fa-check-circle me-2"></i>ToDo App
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto">
                        @if (Context.Session.GetInt32("UserId") != null)
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="ToDoLists" asp-action="Index">
                                    <i class="fas fa-list me-1"></i> My Lists
                                </a>
                            </li>
                            @if (Context.Session.GetInt32("UserId") == 1)
                            {
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Users" asp-action="Index">
                                        <i class="fas fa-users me-1"></i> Users
                                    </a>
                                </li>
                            }
                        }
                    </ul>
                    <div class="d-flex">
                        @if (Context.Session.GetInt32("UserId") != null)
                        {
                            <a asp-controller="Login" asp-action="Logout" class="btn btn-outline-light">
                                <i class="fas fa-sign-out-alt me-1"></i> Logout
                            </a>
                        }
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <main class="container py-4">
        @RenderBody()
    </main>

    <footer class="footer mt-auto py-3 bg-light">
        <div class="container text-center">
            <span class="text-muted">© @DateTime.Now.Year - ToDo App</span>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>